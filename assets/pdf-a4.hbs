<div style="width:1123px;min-height:794px;background:#ffffff;color:#111;box-sizing:border-box;padding:32px 64px;font-family:'Gothic A1','Noto Sans JP',-apple-system,BlinkMacSystemFont,'Segoe UI',Roboto,'Hiragino Kaku Gothic ProN',Meiryo,Arial,sans-serif;display:flex;flex-direction:column;">
  <div style="display:grid;grid-template-columns:1fr 180px;align-items:start;gap:16px;margin-bottom:16px;">
    <div style="min-height:100px;display:flex;flex-direction:column;justify-content:space-between;">
      <div style="font-size:16px;font-weight:700;color:#555555;">{{title}}</div>
      <div style="font-size:14px;font-weight:700;color:#555555;">{{companyLine}}</div>
    </div>
    <div style="display:grid;grid-template-columns:40px 100px;grid-auto-rows:100px;margin-left:auto;">
      <div style="width:40px;height:100px;background:#B5D573;color:#212121;display:flex;flex-direction:column;align-items:center;justify-content:center;border:1px solid #9E9E9E;">
        <span style="font-size:14px;font-weight:700;line-height:1;">検</span>
        <span style="font-size:14px;font-weight:700;line-height:1;margin-top:2px;">印</span>
      </div>
      <div style="width:100px;height:100px;background:#fff;border:1px solid #9E9E9E;padding:12px;box-sizing:border-box;display:flex;align-items:center;justify-content:center;">
        {{#if sign}}
        <img src="{{sign}}" style="width:100%;height:100%;object-fit:contain;" />
        {{/if}}
      </div>
    </div>
  </div>

  <!-- Main table with exact layout from reference image -->
  <!-- A4 landscape: 1123px - 128px padding = 995px content width -->
  <!-- Left side 50%: 497.5px, Right side 50%: 497.5px -->
  <table style="width:100%; border:2px solid #9E9E9E; border-collapse:collapse; table-layout:fixed;">
    <colgroup>
      <col style="width:60px" />
      <col />
      <col style="width:60px" />
      <col />
      <col style="width:60px" />
      <col style="width:437.5px" />
    </colgroup>

    <!-- Row 1: 日付 | Date | 施工時間 | Time | 備考(警備用) | createdNote -->
    <tr style="height:40px;">
      <td style="background:#B5D573; font-weight:700; color:#212121; font-size:12px; text-align:center; border:1px solid #9E9E9E; padding:4px; vertical-align:middle; line-height:1.2;">日付</td>
      <td style="border:1px solid #9E9E9E; padding:4px 8px; font-weight:700; color:#212121; font-size:11px; vertical-align:middle;">{{dateDisplay}}</td>
      <td style="background:#B5D573; font-weight:700; color:#212121; font-size:12px; text-align:center; border:1px solid #9E9E9E; padding:4px; vertical-align:middle; line-height:1.2;">施工時間</td>
      <td style="border:1px solid #9E9E9E; padding:4px 8px; font-weight:700; color:#212121; font-size:11px; vertical-align:middle;">{{startTime}}~{{endTime}} (休 {{breakTime}} 分)</td>
      <td rowspan="2" style="background:#B5D573; font-weight:700; color:#212121; font-size:12px; text-align:center; border:1px solid #9E9E9E; padding:8px 4px; vertical-align:middle; line-height:1.4; width:60px;">
        <div style="display:flex; flex-direction:column; align-items:center; gap:2px;">
          <span>備考</span>
          <span>(警備用)</span>
        </div>
      </td>
      <td rowspan="2" style="border:1px solid #9E9E9E; padding:8px; font-weight:700; color:#212121; font-size:11px; vertical-align:top; word-break:break-all; white-space:pre-wrap; height:80px;">{{createdNote}}</td>
    </tr>

    <!-- Row 2: お客様 | Company -->
    <tr style="height:40px;">
      <td rowspan="2" style="background:#B5D573; font-weight:700; color:#212121; font-size:12px; text-align:center; border:1px solid #9E9E9E; padding:4px; vertical-align:middle; line-height:1.2;">お客様</td>
      <td colspan="3" style="border:1px solid #9E9E9E; padding:4px 8px; font-weight:700; color:#212121; font-size:11px; vertical-align:middle; word-break:break-all;">{{companyName}}</td>
    </tr>

    <!-- Row 3: Organization | 備考(元請用) | signerNote -->
    <tr style="height:40px;">
      <td colspan="3" style="border:1px solid #9E9E9E; padding:4px 8px; font-weight:700; color:#212121; font-size:11px; vertical-align:middle; word-break:break-all;">{{organizationName}}</td>
      <td rowspan="2" style="background:#B5D573; font-weight:700; color:#212121; font-size:12px; text-align:center; border:1px solid #9E9E9E; padding:8px 4px; vertical-align:middle; line-height:1.4; width:60px;">
        <div style="display:flex; flex-direction:column; align-items:center; gap:2px;">
          <span>備考</span>
          <span>(元請用)</span>
        </div>
      </td>
      <td rowspan="2" style="border:1px solid #9E9E9E; padding:8px; font-weight:700; color:#212121; font-size:11px; vertical-align:top; word-break:break-all; white-space:pre-wrap; height:80px;">{{signerNote}}</td>
    </tr>

    <!-- Row 4: 工事名 | Construction -->
    <tr style="height:40px;">
      <td style="background:#B5D573; font-weight:700; color:#212121; font-size:12px; text-align:center; border:1px solid #9E9E9E; padding:4px; vertical-align:middle; line-height:1.2;">工事名</td>
      <td colspan="3" style="border:1px solid #9E9E9E; padding:4px 8px; font-weight:700; color:#212121; font-size:11px; vertical-align:middle; word-break:break-all;">{{constructionName}}</td>
    </tr>
  </table>

  <!-- Workers section - 8x6 grid (8 rows x 6 columns, separate table) -->
  <table style="width:100%; border:2px solid #9E9E9E; border-top:none; border-collapse:collapse; table-layout:fixed;">
    <colgroup>
      <col style="width:60px" />
      <col style="width:155px" />
      <col style="width:155px" />
      <col style="width:155px" />
      <col style="width:155px" />
      <col style="width:155px" />
      <col style="width:155px" />
    </colgroup>
    {{#if userGrid}}
    {{#each userGrid}}
      {{#if @first}}
      <tr style="height:40px;">
        <td rowspan="8" style="background:#B5D573; border:1px solid #9E9E9E; padding:8px 4px; height:320px;">
          <div style="display:flex; flex-direction:column; align-items:center; height:100%;">
            <div style="flex:1; display:flex; align-items:center;">
              <span style="font-weight:700; color:#212121; font-size:12px; line-height:1.2;">隊員名</span>
            </div>
            <div>
              <span style="font-weight:700; color:#212121; font-size:12px; line-height:1.2;">合計{{../userCount}}名</span>
            </div>
          </div>
        </td>
        {{#each cells}}
        <td style="border:1px solid #9E9E9E; padding:4px 6px; font-weight:700; color:#212121; font-size:10px; vertical-align:middle; white-space:nowrap; overflow:hidden; text-overflow:ellipsis;">{{this}}</td>
        {{/each}}
      </tr>
      {{else}}
      <tr style="height:40px;">
        {{#each cells}}
        <td style="border:1px solid #9E9E9E; padding:4px 6px; font-weight:700; color:#212121; font-size:10px; vertical-align:middle; white-space:nowrap; overflow:hidden; text-overflow:ellipsis;">{{this}}</td>
        {{/each}}
      </tr>
      {{/if}}
    {{/each}}
    {{else}}
    <!-- No users case - 8 empty rows -->
    <tr style="height:40px;">
      <td rowspan="8" style="background:#B5D573; border:1px solid #9E9E9E; padding:0; margin:0;">
        <table style="width:100%; height:100%; border-collapse:collapse; border-spacing:0;">
          <tr style="height:240px;">
            <td style="font-weight:700; color:#212121; font-size:12px; text-align:center; vertical-align:middle; line-height:1; padding:0; margin:0; writing-mode:vertical-rl; text-orientation:upright;">隊員名</td>
          </tr>
          <tr style="height:80px;">
            <td style="font-weight:700; color:#212121; font-size:12px; text-align:center; vertical-align:middle; line-height:1; padding:0; margin:0; writing-mode:vertical-rl; text-orientation:upright;">合計0名</td>
          </tr>
        </table>
      </td>
